{% extends 'AppBundle::layout_m.html.twig' %}

{% block content %}
<style>
    .payment form input {
        border: solid 1px black;
    }
    .wrap .text-error {
        color: red;
    }
</style>
<div class="wrap">
    <div class="back-link r-fl"><a href="{{ path('homepage') }}"><span class="v-m arrow">«</span>Вернуться</a></div>
