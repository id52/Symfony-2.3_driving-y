        <li><a title="Главная" href="{{ path('homepage') }}">Главная</a></li>
        <li class="active"><span>Обратная связь</span></li>
    </ul>
    <div class="payment">
        <div class="main-title left-bg">
            <div class="caption">Обратная связь:</div>
        </div>
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="go"><span class="btn2">Отправить <input value="" type="submit"></span></div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock content %}
