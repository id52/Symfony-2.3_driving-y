{% extends 'AppBundle::admin.html.twig' %}

{% block content %}
    <h1>{{ 'admin.automailing_promo_keys'|trans }}</h1>
    <hr>
    {% if pagerfanta.currentPageResults|length %}
        <br>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>{{ 'admin.promo_key_key'|trans }}</th>
                <th>{{ 'admin.promo_key_created'|trans }}</th>
                <th>{{ 'admin.promo_key_discount'|trans }}</th>
                <th>{{ 'admin.promo_key_valid_to'|trans }}</th>
                <th>{{ 'admin.promo_key_activated'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for promo_key in pagerfanta.currentPageResults %}
                <tr>
                    <td>{{ promo_key.hash }}</td>
                    <td>{{ promo_key.created|date('d.m.Y H:i') }}</td>
                    <td>{{ promo_key.discount }}</td>
                    <td>{{ promo_key.validTo|date('d.m.Y H:i') }}</td>
                    <td>{{ promo_key.activated ? promo_key.activated|date('d.m.Y H:i') : '' }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        {{ 'no_data'|trans }}
    {% endif %}
    {% if pagerfanta.haveToPaginate %}
        {{ pagerfanta(pagerfanta, 'twitter_bootstrap_translated', { prev_message: '←', next_message: '→' }) }}
    {% endif %}
{% endblock content %}
