{% extends 'AppBundle::admin.html.twig' %}
{% trans_default_domain 'user' %}

{% block content %}
    <h3>{{ 'admin.user_edit_title'|trans({}, 'messages') }}</h3>
    <hr>
    <dl class="dl-horizontal">
        <dt>{{ 'user_email'|trans }}:</dt>
        <dd>{{ user.email }}</dd>
        <dt>{{ 'user_name'|trans }}:</dt>
        <dd>{{ user.lastName }} {{ user.firstName }} {{ user.patronymic }}</dd>
    </dl>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="form-actions">
            <button type="submit" class="btn btn-success">
                <i class="fa fa-download"></i>
                <span>{{ 'admin.buttons.save'|trans({}, 'messages') }}</span>
            </button>
            <a class="btn pull-right" href="{{ path('admin_users_access') }}"><i class="fa fa-arrow-left"></i> {{ 'admin.buttons.back_to_list'|trans({}, 'messages') }}</a>
        </div>
    {{ form_end(form) }}
{% endblock content %}
