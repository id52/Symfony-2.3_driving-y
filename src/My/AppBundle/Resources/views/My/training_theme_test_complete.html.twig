{% extends 'AppBundle::layout_new.html.twig' %}

{% block content %}
<nav class="path">
    <a href="{{ path('homepage') }}">{{ 'titles.homepage'|trans }}</a>
    » <a href="{{ path('my_trainings') }}">{{ 'titles.trainings'|trans }}</a>
    » <a href="{{ path('my_training', { id: theme.subject.id }) }}">{{ theme.subject.title }}</a>
    » <a href="{{ path('my_training_theme', { id: theme.id }) }}">{{ theme.title }}</a>
    » <strong>{{ 'theme_test_title'|trans }}</strong>
</nav>

<div class="mainContent">
    <div class="title"><h1>{{ 'test.complete'|trans }}</h1></div>
    {% if next_theme %}
    {{ settings['training_theme_test_complete_next']|raw }}
    {% else %}
    {{ settings['training_theme_test_complete_list']|raw }}
    {% endif %}
    <div class="links">
    {% if next_theme %}
        <a class="bg-green" href="{{ path('my_training_theme', { id: next_theme.id }) }}">{{ 'theme_test_complete_next'|trans }}</a>
    {% else %}
        <a class="bg-red" href="{{ path('my_training', { id: theme.subject.id }) }}">{{ 'theme_test_complete_list'|trans }}</a>
    {% endif %}
    </div>
</div>
{% endblock content %}
