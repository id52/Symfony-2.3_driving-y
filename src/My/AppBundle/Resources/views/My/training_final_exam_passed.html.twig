{% extends 'AppBundle::layout_new.html.twig' %}

{% block content %}
<nav class="path">
    <a href="{{ path('homepage') }}">{{ 'titles.homepage'|trans }}</a>
    » <a href="{{ path('my_trainings') }}">{{ 'titles.trainings'|trans }}</a>
    » <strong>{{ 'final_exam'|trans }}</strong>
</nav>

<div class="mainContent">
    <div class="title"><h1>{{ 'training.final_exam.passed'|trans }}</h1></div>
    {% if app.user.certificate %}
        <ul class="info-list">
            <li class="user-certificate">
                {{ settings['training_final_exam_passed']|replace({ '%certificate_link%': path('my_get_certificate') })|raw }}
            </li>
        </ul>
    {% else %}
        {{ settings['training_final_exam_passed']|replace({ '%certificate_link%': '#' })|raw }}
    {% endif %}
    {% if is_granted('ROLE_MOD') %}
        <div class="links">
            <a class="bg-red" href="{{ path('my_training_final_exam_reset') }}">{{ 'reset'|trans }}</a>
        </div>
    {% endif %}
</div>
{% endblock content %}
