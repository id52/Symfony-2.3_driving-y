<form class="form-horizontal styled" action="{{ path('fos_user_resetting_send_email') }}" method="POST">
    <div class="control-group">
        {% if invalid_username is defined %}
            <div class="alert alert-error">
                <a class="close" data-dismiss="alert">Ã—</a>
                {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}
            </div>
        {% endif %}
        <label class="control-label" for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="controls">
            <input type="text" id="username" name="username" required="required" />
        </div>
    </div>

    <div class="form-actions">
        <input class="green_btn" type="submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
</form>
